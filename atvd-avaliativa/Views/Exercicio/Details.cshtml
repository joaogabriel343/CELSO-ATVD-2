@model atvd_avaliativa.Models.Exercicio

@{
    ViewData["Title"] = "Details";
}
<style>
    h1, h4 {
        background: linear-gradient(to right, #6A5ACD, #2567F5);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 8px #6A5ACD;
        margin-bottom: 1rem;
    }

    hr {
        border: none;
        height: 2px;
        background: linear-gradient(to right, #6A5ACD, #2567F5);
        margin-bottom: 2rem;
    }

    dl.row {
        background-color: #1f1f1f;
        padding: 2rem;
        border-radius: 20px;
        box-shadow: 0 0 25px rgba(38, 103, 245, 0.3);
        animation: fadeIn 1s ease-in-out;
    }

    dt {
        font-weight: bold;
        color: #FFD700;
    }

    dd {
        color: #ffffff;
        margin-bottom: 1rem;
    }

    a {
        color: #6A5ACD;
        font-weight: bold;
        text-decoration: none;
        margin-right: 10px;
        transition: 0.3s;
    }

        a:hover {
            color: #FFD700;
            text-decoration: underline;
        }

</style>
<h1>Details</h1>

<div>
    <h4>Exercicio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ExercicioID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
