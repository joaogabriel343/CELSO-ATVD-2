@model atvd_avaliativa.Models.Treino

@{
    ViewData["Title"] = "Delete";
}
<style>
    h1, h4 {
        background: linear-gradient(to right, #6A5ACD, #2567F5);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 8px #6A5ACD;
        margin-bottom: 1rem;
    }

    h3 {
        color: red;
        margin-bottom: 1.5rem;
        text-shadow: 0 0 5px rgba(255, 215, 0, 0.3);
    }

    hr {
        border: none;
        height: 2px;
        background: linear-gradient(to right, #6A5ACD, #2567F5);
        margin-bottom: 2rem;
    }

    dl.row {
        background-color: #1f1f1f;
        padding: 2rem;
        border-radius: 20px;
        box-shadow: 0 0 25px rgba(38, 103, 245, 0.3);
        animation: fadeIn 1s ease-in-out;
    }

    dt {
        font-weight: bold;
        color: #FFD700;
    }

    dd {
        color: #ffffff;
        margin-bottom: 1rem;
    }

    .btn-danger {
        background: linear-gradient(to right, #ff5e5e, #ff1e1e);
        border: none;
        color: #fff;
        padding: 10px 20px;
        border-radius: 10px;
        font-weight: bold;
        box-shadow: 0 0 12px rgba(255, 94, 94, 0.5);
        transition: background 0.3s ease-in-out;
    }

        .btn-danger:hover {
            background: linear-gradient(to right, #FFD700, #f0c420);
            color: #000;
            box-shadow: 0 0 18px rgba(255, 215, 0, 0.7);
        }

    a {
        color: #6A5ACD;
        font-weight: bold;
        text-decoration: none;
        margin-left: 10px;
        transition: 0.3s;
    }

        a:hover {
            color: #FFD700;
            text-decoration: underline;
        }

    .alert-danger {
        background-color: #ff4d4d;
        color: white;
        font-weight: bold;
        border: none;
        border-radius: 10px;
        padding: 1rem;
        box-shadow: 0 0 15px rgba(255, 77, 77, 0.4);
    }
</style>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Treino</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Personal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Personal.PersonalID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Aluno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Aluno.AlunoID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hora)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TreinoID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
