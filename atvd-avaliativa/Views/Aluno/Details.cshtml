@model atvd_avaliativa.Models.Aluno

@{
    ViewData["Title"] = "Details";
}
<style>
    h1, h4 {
        background: linear-gradient(to right, #6A5ACD, #2567F5);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 8px #6A5ACD;
        margin-bottom: 1rem;
    }

