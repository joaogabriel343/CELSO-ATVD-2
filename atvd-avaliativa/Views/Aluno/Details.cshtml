    }

    dt {
        font-weight: bold;
        color: #FFD700;
    }

    dd {
        color: #ffffff;
        margin-bottom: 1rem;
    }

    a {
        color: #6A5ACD;
        font-weight: bold;
        text-decoration: none;
        margin-right: 10px;
        transition: 0.3s;
    }

        a:hover {
